<resources>

    <style name="dlg" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--EditText输入-->
    <style name="EditText_Input">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:hint">"请输入"</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/just_color_333333</item>
    </style>

    <style name="Line_Margin_15">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">@color/just_color_999999</item>
    </style>

    <!--提交按钮-->
    <style name="Btn_submit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_gradient_btn</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/just_color_ffffff</item>
    </style>

    <!--选择照片和拍照选择页面theme，因为继承自AppCompatActivity所以必须使用AppCompat类型主题。-->
    <style name="Dialog" parent="BaseDialog">
        <item name="android:windowAnimationStyle">@style/Base.Animation.Dialog.Style</item>
    </style>

    <style name="BaseDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTitleBackgroundStyle">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="Base.Animation.Dialog.Style" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/popup_in</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>

    <!--从下往上弹PopupWindow-->
    <style name="AnimBottomToTop" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <!--从上往下弹PopupWindow-->
    <style name="AnimTopToBottom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim_top</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim_top</item>
    </style>
    <!--从右往左弹PopupWindow-->
    <style name="AnimRightToLeft" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim_right</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim_right</item>
    </style>


    <style name="PrivacyThemeDialog" parent="@android:style/Theme.Dialog">
        <!--Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--是否显示title-->
        <item name="android:windowNoTitle">false</item>
        <!--设置dialog的背景，（#00000000）-->
        <item name="android:background">@android:color/transparent</item>
        <!--显示区域背景是否透明，（#00000000）-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--就是用来控制灰度的值，当为1时，界面除了我们的dialog内容是高亮显示的，dialog以外的区域是黑色的，完全看不到其他内容，系统的默认值是0.5-->
        <item name="android:backgroundDimAmount">0.5</item>
        <!--显示区域以外是否使用黑色半透明背景-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Notification_Toast">
        <item name="android:windowEnterAnimation">@anim/notification_toast_enter</item>
        <item name="android:windowExitAnimation">@anim/notification_toast_exit</item>
    </style>
</resources>
