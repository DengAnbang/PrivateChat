<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/just_color_f2f3f4"
              android:orientation="vertical">

    <include layout="@layout/title_layout"/>


    <com.xhab.utils.view.TwoTextLinearView
        android:id="@+id/ttv_is_open"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        app:leftText="\u3000启用安全码\u3000"
        app:rightDrawable="@mipmap/c25_icon1"
        />

    <com.xhab.utils.view.TwoTextLinearView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:leftText="\u3000自动锁定\u3000"
        app:rightDrawable="@mipmap/c14_2_icon1"
        app:rightGravity="right"
        app:rightText="退出后立即锁定"
        />

    <com.xhab.utils.view.TwoTextLinearView
        android:id="@+id/ttv_set_security_code"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:leftText="\u3000修改安全码\u3000"
        app:rightDrawable="@mipmap/c14_2_icon1"
        app:rightGravity="right"

        />
</LinearLayout>