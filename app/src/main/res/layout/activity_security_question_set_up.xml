<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_color_f2f3f4"
              android:orientation="vertical">

    <include layout="@layout/title_layout"/>

    <com.xhab.utils.view.TwoTextLinearView
        android:id="@+id/ttv_q1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:leftText="\u3000问题1\u3000"
        app:rightDrawable="@mipmap/xialajiantou"
        app:rightText="请选择问题"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/just_color_ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="\u3000\u3000答案:"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/et_a1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/just_color_ffffff"
            android:hint="请输入问题的答案"
            android:paddingLeft="30dp"/>
    </LinearLayout>

    <com.xhab.utils.view.TwoTextLinearView
        android:id="@+id/ttv_q2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:leftText="\u3000问题2\u3000"
        app:rightDrawable="@mipmap/xialajiantou"
        app:rightText="请选择问题"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/just_color_ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="\u3000\u3000答案:"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/et_a2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/just_color_ffffff"
            android:hint="请输入问题的答案"
            android:paddingLeft="30dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_submit"
        style="@style/Btn_submit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/et_password"
        android:layout_marginTop="70dp"
        android:text="确认"/>
</LinearLayout>