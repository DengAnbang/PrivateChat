<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:layout_marginTop="1dp"
              android:background="@color/just_color_ffffff"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_head_portrait"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_video_start"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="3"
            android:singleLine="true"
            android:textColor="@color/just_color_000000"
            android:textSize="16sp"
            tools:text="啊阿斯顿撒旦adsad sadsadsadsadsadadssa"/>

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxEms="3"
            android:singleLine="true"
            android:textColor="@color/just_color_999999"
            android:textSize="14sp"
            tools:text="啊阿斯顿撒旦adsad sadsadsadsadsadadssa"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:text="3月27日"/>
    </LinearLayout>
</LinearLayout>