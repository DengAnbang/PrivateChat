<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"

    >

    <ImageView
        android:id="@+id/tab_content_image"
        android:layout_width="22dp"
        android:layout_height="18dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/iv_prompt"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="-3dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/tab_content_image"
        android:background="@drawable/shape_red_dot"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tab_content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab_content_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="12sp" />
</RelativeLayout>