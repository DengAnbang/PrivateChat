<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:layout_marginTop="1dp"
              android:background="@color/just_color_ffffff"
              android:orientation="horizontal">

    <ImageView

        android:id="@+id/iv_head_portrait"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/group_icon"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="3"
            android:singleLine="true"
            android:textColor="@color/just_color_000000"
            android:textSize="16sp"
            tools:text="啊阿斯顿撒旦adsad sadsadsadsadsadadssa"/>

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxEms="3"
            android:singleLine="true"
            android:text="申请添加你为好友"
            android:textColor="@color/just_color_999999"
            android:textSize="14sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_agree"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:background="@color/just_color_ff22f033"
        android:gravity="center"
        android:text="同意"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_refuse"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:background="@android:color/holo_red_light"
        android:gravity="center"
        android:text="拒绝"
        android:textSize="18sp"/>
</LinearLayout>